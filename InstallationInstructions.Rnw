\section{Install devtools}
\begin{itemize}
  \item In R or R Studio
  <<eval=FALSE,prompt=TRUE>>=
  install.packages("devtools")
  @
  Install \rexpr{rparse}:
  <<eval=FALSE, prompt=TRUE>>=
  devtools::install_github("dgrtwo/rparse")
  @
     \end{itemize}
